{
    "name": "msazzuhair/inertia-ci-3",
    "description": "Inertia server-side adapter for CodeIgniter 3",
    "keywords": [
        "inertia",
        "codeigniter"
    ],
    "homepage": "https://github.com/msazzuhair/inertia-ci-3",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Rami",
            "email": "me@amirrami.com",
            "homepage": "https://amirrami.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^8.5",
        "vimeo/psalm": "^3.11",
        "codeigniter/framework": "^3.1.13"
    },
    "autoload": {
        "psr-4": {
            "Inertia\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Inertia\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
